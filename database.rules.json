{
  "rules": {
    ".read": false,
    ".write": false,
    "messages": {
      ".read": true,
      ".write": "auth != null",
       "$id": {
         ".validate": "newData.hasChildren(['body', 'username'])"
       }
    },
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    },
    "users-messages": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "users-friends": {
      ".write": "auth != null",
      "$uid": {
        ".read": "$uid === auth.uid"
      }
    },
    "pushtokens": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "presence": {
      "viewers": {
        ".read": true,
        "$id": {
          ".write": true,
          ".validate": "newData.val() === true"
        }
      },
      "connected": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  }
}
